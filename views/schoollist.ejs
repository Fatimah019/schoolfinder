<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Finder | List of Schools</title>
    <link rel="stylesheet" href="/css/list.css">
</head>
<body>
    <header>
        <div id="logo"></div>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/signup">Sign up</a></li>
                <li><a href="/login">Log in</a></li>
            </ul>
        </nav>
    </header>
    <div style="background-color:green">
            <% if (success_Message != ''){%>
                <h3><%= success_Message %></h3>
            <% } %>
        </div>
    <section id="search_schools">
        <h3>Search for school by location or course</h3>
        <form action="/schoollist" method="GET">
            <input type="search" name="search" id="search" placeholder="Search for a school near you">
            <button type="submit">Search</button>
        </form>
    </section>

    <section id="results">
        <h3>List of Schools</h3>
        <div id="layout_results">
            <% schoolstates.forEach(function(school){ %>
            <div id="one_results" class="result">
                <h4><%= school.schoolname %></h4>
                <img src=`/img/uploads/$<%= school.img %>` alt="school image">
                <p><%= school.location %></p>
                <a href="<%= school.website %>" id="more">See School Site</a>
            </div>
            <% }) %>
        </div>

    </section>
    <footer>
        <div id="left_footer">
            <h4>About us</h4>
            <ul>
                <li><a href="#">About Schoolfinder</a></li>
                <li><a href="#">Meet the Team</a></li>
                <li><a href="#">Disclaimer</a></li>
            </ul>
        </div>
        <div id="right_footer">
            <h4>Contact us</h4>
            <ul>
                <li><a href="#"><img src="icons/twitter.svg" alt="twitter"></a> </li>
                <li><a href="#"><img src="icons/facebook.svg" alt="facebook"></a></li>
                <li><a href="#"><img src="icons/instagram.svg" alt="instagram"></a></li>
            </ul>
        </div>
    </footer>
    <button id="top"><a href="#search_schools">Top</a></button>
    <script src="/js/script.js"></script>
</body>
</html>